{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {"source": "/", "destination": "/index.html"},
      {"source": "**", "destination": "/page.html"}
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
